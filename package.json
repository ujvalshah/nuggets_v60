{
  "name": "nuggets_v60",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:server": "tsx watch server/src/index.ts",
    "dev:all": "concurrently \"npm run dev:server\" \"npm run dev\"",
    "build": "vite build",
    "build:verify": "npm run build && node scripts/verify-build.js",
    "preview": "vite preview",
    "start": "node --import tsx server/src/index.ts",
    "promote-admin": "tsx server/src/utils/promoteToAdmin.ts",
    "list-users": "tsx server/src/utils/listUsers.ts",
    "diagnose-users": "tsx server/src/utils/diagnoseUserIssues.ts",
    "check-email": "tsx server/src/utils/checkUserByEmail.ts",
    "fix-indexes": "tsx server/src/utils/fixUserIndexes.ts",
    "cleanup-duplicates:dry-run": "tsx server/src/utils/cleanupDuplicateUsers.ts",
    "cleanup-duplicates": "cross-env DRY_RUN=false tsx server/src/utils/cleanupDuplicateUsers.ts",
    "sanitize:dry-run": "tsx server/scripts/sanitizeDatabase.ts",
    "sanitize:execute": "cross-env DRY_RUN=false tsx server/scripts/sanitizeDatabase.ts",
    "sanitize:force": "cross-env DRY_RUN=false FORCE_EXECUTE=true tsx server/scripts/sanitizeDatabase.ts",
    "migrate-canonical-names": "tsx server/src/scripts/runMigration.ts",
    "migrate-categoryids": "tsx server/src/scripts/backfillCategoryIds.ts",
    "update-tag-usage": "tsx server/src/scripts/updateTagUsageCounts.ts",
    "audit": "node scripts/audit-code.js",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "prepare": "husky || true"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings 0"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@google/genai": "^1.32.0",
    "@sentry/node": "^10.32.1",
    "@sentry/react": "^10.32.1",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-virtual": "^3.13.13",
    "bcryptjs": "^3.0.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "lucide-react": "^0.556.0",
    "mongoose": "^9.0.1",
    "morgan": "^1.10.1",
    "open-graph-scraper": "^6.11.0",
    "papaparse": "^5.5.3",
    "path": "^0.12.7",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "probe-image-size": "^7.2.3",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.10.1",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.4.0",
    "url": "^0.11.4",
    "xlsx": "^0.18.5",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.19.3",
    "@types/pino": "^7.0.5",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.7.0",
    "typescript": "~5.9.3",
    "vite": "^7.2.7"
  }
}
